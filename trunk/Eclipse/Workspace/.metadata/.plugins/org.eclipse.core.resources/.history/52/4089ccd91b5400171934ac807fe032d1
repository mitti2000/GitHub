package ch.mitdom.compresstutorial;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

/**
 * Listener um das passende ActionGui aufzurufen
 * @author mitti
 *
 */
public class StartOperationListener implements ActionListener {
	
	int type;
	MainGui mainGui;
	
	public StartOperationListener(int type, MainGui mainGui) {
		this.type = type;
		this.mainGui = mainGui;
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		switch(type){
			case 1:
				mainGui.startCompression();
				break;
			case 2:
				mainGui.startDecompression();
				break;
		}
		
	}

}
