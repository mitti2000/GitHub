        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryAssistantGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtbx_path" HorizontalAlignment="Left" Height="23" Margin="164,76,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="labPath" Content="Set Path to Watch" HorizontalAlignment="Left" Margin="41,73,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAddPath" Content="Add" HorizontalAlignment="Left" Margin="164,143,0,0" VerticalAlignment="Top" Width="75" Click="btnAddPath_Click"/>
        <Label Content="Library Assistant" HorizontalAlignment="Left" Margin="41,21,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" FontFamily="Showcard Gothic"/>

    </Grid>
</Window>
