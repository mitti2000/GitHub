package ch.mitti.sorting;

public class Shakersort implements Isorter {
	boolean direction;
	int posBottom;
	int posTop;
	boolean sorted;
	
	public Shakersort() {
		direction = true;
		posBottom = 0;
		posTop;
		sorted = false;
	}

	@Override
	public void sort(int[] zahlen) {
		if(direction){
			for(int i=zahlen.length-1; i>=1; i--){
				if(sorted) return;
				sorted = true;
				for(int j=1; j<=i ; j++){
					if(zahlen[j] < zahlen[j-1]){
						int temp = zahlen[j];
						zahlen[j] = zahlen[j-1];
						zahlen[j-1]=temp;
						sorted = false;
					}
				}
			}
		}
		
		else{
			
		}

	}

}
