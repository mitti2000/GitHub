package ch.zbw.prgf.menus;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;

import java.awt.AWTException;
import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.Menu;
import java.awt.MenuItem;
import java.awt.PopupMenu;
import java.awt.SystemTray;
import java.awt.TrayIcon;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JPopupMenu;
import javax.swing.KeyStroke;
import javax.swing.border.EmptyBorder;

public class Tray extends JFrame implements ActionListener{
	//***Definieren der Menukomponenten***
	//
	private Menu menu1, submenu;
	private MenuItem menuitem1, menuitem2, menuitem3, submenuitem1, submenuitem2;
	
	public Tray(){
		initComponents();
		bindListener();
		initTray();
	}
	
	private void initComponents() {
		menu1 = new Menu("Menü 1");
		submenu = new Menu("Submenü 1");
		menuitem1 = new MenuItem("Menü Item 1");
		menuitem2 = new MenuItem("Menü Item 2");
		menuitem3 = new MenuItem("Menü Item 3");
		submenuitem1 = new MenuItem("SubMenü Item 1");
		submenuitem2 = new MenuItem("SubMenü Item 2");
		
		// Menü Struktur aufbauen
		menu1.add(menuitem1);
		menu1.add(menuitem2);
		menu1.add(menuitem3);
		
		menu1.add(submenu);
		submenu.add(submenuitem1);
		submenu.add(submenuitem2);
	}
	
	private void bindListener(){
		menuitem1.addActionListener(this);
		menuitem2.addActionListener(this);
		menuitem3.addActionListener(this);
		submenuitem1.addActionListener(this);
		submenuitem2.addActionListener(this);
	}
	
	private void initTray(){
		//Check the SystemTray is supported
        if (!SystemTray.isSupported()) {
            System.out.println("SystemTray is not supported");
            return;
        }
        
        java.net.URL imageURL = this.getClass().getResource("/16x16.png");
		ImageIcon image = new ImageIcon(imageURL);
        
        final PopupMenu popup = new PopupMenu();
        final TrayIcon trayIcon = new TrayIcon(image.getImage());
        final SystemTray tray = SystemTray.getSystemTray();

        popup.add(menu1);
        trayIcon.setPopupMenu(popup);
        
        try {
			tray.add(trayIcon);
		} catch (AWTException e) {
			System.out.println("TrayIcon could not be added.");
		}
	}
	
	public static void main(String[] args){
		Tray a1 = new Tray();
	}

	public void actionPerformed(ActionEvent arg0) {
		MenuItem clicked = (MenuItem)arg0.getSource();
		System.out.println("Menü " + clicked.getLabel() + " wurde ausgewählt.");
	}
}
