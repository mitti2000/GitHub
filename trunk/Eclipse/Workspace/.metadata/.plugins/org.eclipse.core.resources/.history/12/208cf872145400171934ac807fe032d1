package ch.mitdom.compresstutorial;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.File;

import javax.swing.JFileChooser;

/**
 * Listener der einen FileChooser Dialog öffnet, in welchem nur eine Datei
 * gewählt werden kann.
 */
public class ChooseSourceListener extends JFileChooser implements ActionListener{
	DecompressorGui gui;
	
	public ChooseSourceListener(DecompressorGui gui){
		this.gui = gui;
	}
	
	/**
	 * Öffnet den FileChooser und setzt diegGewählte Datei als Quelldatei
	 */
	public void actionPerformed(ActionEvent e) {
		this.setControlButtonsAreShown(true);
		this.setMultiSelectionEnabled(false);
		int returnVal = this.showOpenDialog(this);
		File file = this.getSelectedFile();
		gui.setSource(file);	
	}
}
