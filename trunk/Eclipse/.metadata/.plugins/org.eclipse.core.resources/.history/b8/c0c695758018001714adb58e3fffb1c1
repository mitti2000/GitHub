package ch.mitti.yahtzee.view;

import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;
import java.util.ArrayList;
import java.util.Iterator;

import javax.swing.JFrame;
import javax.swing.JLabel;

import ch.mitti.yahtzee.controller.ButtonController;
import ch.mitti.yahtzee.controller.PlayerController;

public class GameBoardView extends JFrame{
	
	private GridBagLayout gbl;
	private GridBagConstraints gbc;
	private ScoreBoardView scoreBoard;
	private ButtonController buttonBoard;
	private PlayerController playerController;
	private int inset;
	private DiceBoardView diceBoard;
	public static final int WINDOW_SIZE = 800;
	public static final int TOTAL_PLAYER_AMOUNT = 3;
	private int playerAmount;
	
	public GameBoardView(){
		playerAmount = 0;
		inset = 30;
		gbl = new GridBagLayout();
		gbc = new GridBagConstraints();
		playerController = new PlayerController(this);
		scoreBoard = new ScoreBoardView(playerController);
		diceBoard = new DiceBoardView();
		buttonBoard = new ButtonController();
		
		this.init();
	}
	
	public void init(){
		ArrayList<PlayerView> playerViews = playerController.getPlayerView();
		
		Iterator<PlayerView> it = playerViews.iterator();
		PlayerView view = null;
		
		this.setLayout(gbl);
		gbc.fill = GridBagConstraints.BOTH;
		gbc.weightx = 1.0;
		gbc.weighty = 1.0;
		gbc.insets = new Insets(inset, inset, inset, inset);
		
		
		gbc.gridx = 0;
		gbc.gridy = 0;
		gbc.gridwidth = 2;
		gbc.gridheight = 8;
		
		gbl.setConstraints(scoreBoard, gbc);
		this.add(scoreBoard);
		
		//Player1
		gbc.gridx = 3;
		gbc.gridy = 0;
		gbc.gridwidth = 1;
		gbc.gridheight = 8;
		
		if(it.hasNext()) view = it.next();
		gbl.setConstraints(view, gbc);
		this.add(playerController.getPlayerView(0));
		
		//Player2
		gbc.gridx = 4;
		gbc.gridy = 0;
		gbc.gridwidth = 1;
		gbc.gridheight = 8;
		
		gbl.setConstraints(playerController.getPlayerView(1), gbc);
		this.add(playerController.getPlayerView(1));
		
		//Player2
		gbc.gridx = 5;
		gbc.gridy = 0;
		gbc.gridwidth = 1;
		gbc.gridheight = 8;
		
		gbl.setConstraints(playerController.getPlayerView(2), gbc);
		this.add(playerController.getPlayerView(2));
		
		//Dice
		gbc.gridx = 5;
		gbc.gridwidth = 1;
		gbc.gridheight = 5;
		gbc.weightx = 0.5;
		gbl.setConstraints(diceBoard, gbc);
		this.add(diceBoard);
		
		//Buttons
		gbc.gridy = 5;
		gbc.gridwidth = 2;
		gbc.gridheight = 3;
		gbl.setConstraints(buttonBoard.getView(), gbc);
		this.add(buttonBoard.getView());
		
		this.setSize(WINDOW_SIZE,WINDOW_SIZE);
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		this.setVisible(true);
	}
	
	public int getPlayerAmount(){
		return playerAmount;
	}
	
	public void addPlayerAmount(){
		this.playerAmount++;
	}
}
