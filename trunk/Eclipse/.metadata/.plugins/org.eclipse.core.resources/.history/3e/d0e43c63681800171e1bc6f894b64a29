package ch.mitti.yahtzee.view;

import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;

import javax.swing.JFrame;

import ch.mitti.yahtzee.controller.ButtonController;

public class GameBoardView extends JFrame{
	
	private GridBagLayout gbl;
	private GridBagConstraints gbc;
	private ScoreBoardView scoreBoard;
	private ButtonController buttonBoard;
	private int inset;
	private DiceBoardView diceBoard;
	public static final int WINDOW_SIZE = 800;
	
	public GameBoardView(){
		inset = 30;
		gbl = new GridBagLayout();
		gbc = new GridBagConstraints();
		scoreBoard = new ScoreBoardView();
		diceBoard = new DiceBoardView();
		buttonBoard = new ButtonController();
		this.init();
	}
	
	public void init(){
		this.setLayout(gbl);
		gbc.fill = GridBagConstraints.BOTH;
		gbc.weightx = 1.0;
		gbc.weighty = 1.0;
		gbc.insets = new Insets(inset, inset, inset, inset);
		
		
		gbc.gridx = 0;
		gbc.gridy = 0;
		gbc.gridwidth = 2;
		gbc.gridheight = 8;
		
		gbl.setConstraints(scoreBoard, gbc);
		this.add(scoreBoard);
		
		//Player1
		gbc.gridx = 0;
		gbc.gridy = 0;
		gbc.gridwidth = 2;
		gbc.gridheight = 8;
		
		gbl.setConstraints(scoreBoard, gbc);
		this.add(scoreBoard);
		
		
		gbc.gridx += 1;
		gbc.gridwidth = 1;
		gbc.gridheight = 5.0;
		gbl.setConstraints(diceBoard, gbc);
		this.add(diceBoard);
		
		gbc.gridy = 5;
		gbc.gridwidth = 2;
		gbc.gridheight = 3;
		gbl.setConstraints(buttonBoard.getView(), gbc);
		this.add(buttonBoard.getView());
		
		this.setSize(WINDOW_SIZE,WINDOW_SIZE);
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		this.setVisible(true);
	}
}
