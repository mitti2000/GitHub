package ch.mitdom.compresstutorial;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.File;
import javax.swing.JFileChooser;

/**
 * Listener der einen FileChooser Dialog öffnet in welchem der Zielpfad(nur Ordner)
 * gewählt werden kann
 */
public class ChooseDestinationListener extends JFileChooser implements ActionListener {

	private CompressorGui compressGUI;
	private ActionGui gui;
	
	/**
	 * Konstruktor erwartet eine Referenz des aufrufenden GUIs
	 * @param gui Referenz auf das aufrufende GUI
	 */
	public ChooseDestinationListener(ActionGui gui){
		this.gui = gui;
	}

	public void actionPerformed(ActionEvent e) {
		this.setControlButtonsAreShown(true);
		this.setMultiSelectionEnabled(false);
		this.setFileSelectionMode(JFileChooser.DIRECTORIES_ONLY);
		this.showOpenDialog(this);
		File file = this.getSelectedFile();
		gui.setDestination(file);
		
	}

}
