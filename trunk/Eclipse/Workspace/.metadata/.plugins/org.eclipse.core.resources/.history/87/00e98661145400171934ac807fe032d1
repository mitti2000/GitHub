package ch.mitdom.compresstutorial;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.File;

import javax.swing.JFileChooser;

public class ChooseSourceListener extends JFileChooser implements ActionListener{
	DecompressorGui decompressGUI;
	
	public ChooseSourceListener(DecompressorGui decompressGUI){
		this.decompressGUI = decompressGUI;
	}

	public void actionPerformed(ActionEvent e) {
		this.setControlButtonsAreShown(true);
		this.setMultiSelectionEnabled(false);
		int returnVal = this.showOpenDialog(this);
		File file = this.getSelectedFile();
		
		
		decompressGUI.setSource(file);
		
	}
	
}
