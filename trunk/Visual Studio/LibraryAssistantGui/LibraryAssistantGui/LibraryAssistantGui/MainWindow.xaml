<Window x:Class="LibraryAssistantGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryAssistantGui"
        mc:Ignorable="d"
        Title="LibraryAssistant" Height="350" Width="525" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="476*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtbxPath" HorizontalAlignment="Left" Height="23" Margin="155,112,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Label x:Name="labPath" Content="Pfad hinzufügen:" HorizontalAlignment="Left" Margin="31,108,0,0" VerticalAlignment="Top" Grid.Column="2" Height="26" Width="99"/>
        <Label Content="Library Assistant" HorizontalAlignment="Left" Margin="31,31,0,0" VerticalAlignment="Top" FontFamily="Showcard Gothic" FontSize="36" FontWeight="Bold" Grid.Column="2" Height="55" Width="362"/>
        <Button x:Name="btnAddPath" Content="Add" HorizontalAlignment="Left" Margin="155,169,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2" Height="20" Click="btnAddPath_Click"/>

    </Grid>
