package ch.mitdom.compresstutorial;

import java.awt.Color;
import java.awt.Font;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class MainGui extends JFrame{
	
	JLabel title;
	JLabel copyright;
	JButton startCompression;
	JButton startDecompression;
	GridBagConstraints mainGbc;
	
	public MainGui(){
		this.setSize(400,400);
		this.setLayout(new GridBagLayout());
		init();
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		this.setLocationRelativeTo(null);
		this.setVisible(true);
	}

	public void startCompression(){
		new CompressorGui();
		this.dispose();
	}
	
	public void startDecompression(){
		new DecompressorGui();
		this.dispose();
	}
	
	public void init(){
		mainGbc = new GridBagConstraints();
		mainGbc.fill = GridBagConstraints.NONE;
		
		title = new JLabel("Archive Master");
		title.setForeground(Color.BLUE);
		title.setFont(new Font("Arial", Font.BOLD, 30));
		mainGbc.gridx = 0;
		mainGbc.gridy = 0;
		mainGbc.insets = new Insets(10,0,50,0);
		this.add(title, mainGbc);
		
		startCompression = new JButton("Starte Kompression");
		startCompression.addActionListener(new StartOperationListener(1, this));
		mainGbc.gridx = 0;
		mainGbc.gridy = 1;
		mainGbc.insets = new Insets(0,0,30,0);
		this.add(startCompression, mainGbc);
		
		startDecompression = new JButton("Starte Dekompression");
		startDecompression.addActionListener(new StartOperationListener(2, this));
		mainGbc.gridx = 0;
		mainGbc.gridy = 2;
		mainGbc.insets = new Insets(0,0,60,0);
		this.add(startDecompression, mainGbc);
		
		copyright = new JLabel("\u00a9 2017 Dominic Sauder & Thomas Mittermair");
		mainGbc.gridx = 0;
		mainGbc.gridy = 3;
		mainGbc.insets = new Insets(0,0,30,0);
		this.add(copyright, mainGbc);
	}
}

