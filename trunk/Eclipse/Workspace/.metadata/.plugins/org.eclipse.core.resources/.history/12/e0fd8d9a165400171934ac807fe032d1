package ch.mitdom.compresstutorial;

/**
 * CompressorFactory erstellt anhand eines Dateityps den richtigen Compressor
 * und gibt diesen zur√ºck
 * @author mitti
 *
 */

public class CompressorFactory {
	ICompressor compressor;
	
	public ICompressor getCompressor(String fileType, CompressorGui compressorGui){
		switch(fileType){
			case(".zip"):
				compressor =  new CompressorZIP(compressorGui);
				break;
				
			case(".7z"):
				compressor = new Compressor7z(compressorGui);
				break;
			
			default:
				compressor = null;
				break;
		}
		return compressor;
	}
}
