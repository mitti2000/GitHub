		for(int j=0; j<5; j++){
			for(int k=0;k<2;k++){
				this.add(new DicePanel(j,k,this));
			}
		}
		
	
		
		//Adding Dice
		for(int l=0;l<5;l++){
			JPanel panel = (JPanel) this.getComponentAt(0, l);
			panel.add(dice[l].getView());
		}
		
	}
