package ch.mitti.turtle;
import ch.aplu.*;
import ch.aplu.turtle.Turtle;

public class Kochkurve {
	Turtle t;
	public Kochkurve(int max, int min){
		t = new Turtle();
		t.speed(200);
		t.hideTurtle();
		t.setX(-200);
		t.setY(-50);
		t.right(90);
		zeichne(max, min);
	}
	
	public void zeichne(int max, int min){
		if(max>5){
			zeichne(max/3,min);
		}
		t.forward(max/3);
		t.left(60);
		t.forward(max/3);
		t.right(120);
		t.forward(max/3);
		t.left(60);
		t.forward(max/3);
	}

	public static void main(String[] args) {
		Kochkurve kochkurve = new Kochkurve(400,5);
	}

}
