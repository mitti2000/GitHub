package ch.mitdom.compresstutorial;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.File;
import javax.swing.JButton;
import javax.swing.JFileChooser;

/**
 * Listener der einen FileChooser Dialog öffnet um mehrere Dateien auszuwählen.
 */

public class ChooseFilesListener extends JFileChooser implements ActionListener {
	
	CompressorGui gui
	/**
	 * Konstruktor erwartet ein Gui vom Typ CompressorGui
	 * @param gui GUI vom Typ CompressorGui
	 */
	public ChooseFilesListener(CompressorGui gui){
		this.gui = gui;
	}
	
	/**
	 * Öffnet einen FileChooser Dialog in welchem mehrere Dateien ausgewählt werden können.
	 * Die Daten werden dann im GUI gesetzt.
	 */
	public void actionPerformed(ActionEvent e) {
		this.setControlButtonsAreShown(true);
		this.setMultiSelectionEnabled(true);
		this.showOpenDialog(this);
		File[] files = this.getSelectedFiles();
		gui.setFiles(files);
	}

}
