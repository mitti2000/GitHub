package ch.mitti.tetris;

import java.awt.Color;

public class Block {
	int pivot;
	int second;
	int third;
	int fourth;
	Color color;
	
	public Block(int type){
		switch(type){
		case 1:
			color = Color.GRAY;
			break;
		case 2:
			color = Color.RED;
			break;
		case 3:
			color = Color.GREEN;
			break;
		case 4:
			color = Color.BLUE;
			break;
		case 4:
			color = Color.CYAN;
			break;
		case 5:
			color = Color.YELLOW;
			break;
		case 6:
			color = Color.ORANGE;
			break;
		case 7:
			color = Color.PINK;
		}
	}
}
