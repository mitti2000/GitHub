package ch.mitti.threaduebung2;

public class Clock extends Thread {
	
	JLabel label;
	
	public Clock(JLabel label){
		this.label = label;
	}
	
	@Override
	public void run(){
		while(!isInterrupted()){
				if(status) counter++;
				label.setText(""+counter);
			try {
				sleep(100);
			} catch (InterruptedException e) {
				interrupt();
			}
		}
	}
}
