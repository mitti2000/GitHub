package ch.mitti.yahtzee.view;

import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;
import java.util.ArrayList;
import javax.swing.JLabel;
import javax.swing.JPanel;

import ch.mitti.yahtzee.model.ScoreBoardModel;

public class ScoreBoardView extends JPanel{
	
	private GridBagLayout gbl;
	private GridBagConstraints gbc;
	private ArrayList<JLabel> labels;
	private ScoreBoardModel sbm;
	
	
	public ScoreBoardView(){
		gbl = new GridBagLayout();
		gbc = new GridBagConstraints();
		sbm = new ScoreBoardModel();
		labels = new ArrayList<JLabel>();
		gbc.fill = GridBagConstraints.BOTH;
		gbc.weightx = 1.0;
		gbc.weighty = 1.0;
		gbc.insets = new Insets(0,0,0,0);
		this.setLayout(gbl);
		this.init();
	}
	
	public void init(){
		gbc.gridx = 0;
		gbc.gridy = 0;
		gbc.gridwidth = 2;
		gbc.gridheight = 1;
		
		for(int i=0;i<22;i++){
			labels.add(new JLabel());
		}
		fillMain();
		gbc.gridy = 0;
		gbc.gridwidth = 1;
		gbc.gridheight = 1;
		fillPlayers();
	}
	
	public void fillMain(){
		int counter = 0;
		for(int i=0; i<22; i++){
			gbc.gridy = counter;
			gbl.setConstraints(labels.get(counter), gbc);
			labels.get(counter).setText(sbm.getValue(counter));
			this.add(labels.get(counter));
			counter++;
		}
		
	}
	
	public void fillPlayers(){
		if(gbc.gridx > GameBoardView.PLAYER_AMOUNT+2) gbc.gridx += 1;
		else return;
	}
	
	
}
