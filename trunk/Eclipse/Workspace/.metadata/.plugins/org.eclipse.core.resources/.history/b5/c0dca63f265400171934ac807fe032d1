package ch.mitdom.compresstutorial;

import java.io.File;

/**
 * Interface für die Kompression dient hauptsächlich der Polymorphie
 */
public interface ICompressor {
	
	/**
	 * Setzt die Zieldatei auf den angegebenen Pfad
	 * @param destinationPath Den Zielpfad vom Typ File
	 */
	void setDestination(File destination);
	
	/**
	 * Setze die Quelle auf die angegeben Files
	 * @param source Quelle vom Typ File[]
	 */
	void setSource(File[] source);
	
	/**
	 * Führe die Kompression aus
	 */
	boolean compress();
	
	/**
	 * Updatet die ProgressBar im Gui
	 * @param progress index des Files das bearbeitet wird
	 * @param fileName Name inkl. Pfad der Datei die bearbeitet wird
	 * @param length Anzahl der Dateien im Quell-Pfad
	 */
	void setProgress(int progress, String fileName, int length);
	
}
