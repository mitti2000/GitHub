package ch.mitti.yahtzee.view;

import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;

import javax.swing.JFrame;

public class GameBoardView extends JFrame{
	
	private GridBagLayout gbl;
	private GridBagConstraints gbc;
	private ScoreBoardView scoreBoard;
	private int inset;
	private DiceBoardView diceBoard;
	
	public GameBoardView(){
		inset = 30;
		gbl = new GridBagLayout();
		gbc = new GridBagConstraints();
		scoreBoard = new ScoreBoardView();
		diceBoard = new DiceBoardView();
		this.init();
	}
	
	public void init(){
		this.setLayout(gbl);
		gbc.fill = GridBagConstraints.BOTH;
		gbc.weightx = 1.0;
		gbc.weighty = 1.0;
		gbc.insets = new Insets(inset, inset, inset, inset);
		gbc.gridx = 0;
		gbc.gridy = 0;
		gbc.gridwidth = 1;
		gbc.gridheight = 8;
		
		gbl.setConstraints(scoreBoard, gbc);
		this.add(scoreBoard);
		
		gbc.gridx += 1;
		gbc.weightx = 2;
		gbc.weighty = 5;
		gbl.setConstraints(diceBoard, gbc);
		this.add(gameBoard);
		
		this.setSize(800,800);
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		this.setVisible(true);
	}
}
