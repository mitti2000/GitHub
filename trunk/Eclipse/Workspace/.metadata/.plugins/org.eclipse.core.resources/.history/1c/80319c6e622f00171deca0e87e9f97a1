package ch.mitti.quadrate;
import ch.aplu.turtle.*;

public class Quadrate {
	
	Turtle t;
	
	public Quadrate(int max, int min){
		t = new Turtle();
		t.speed(200);
		t.hideTurtle();
		t.setX(-200);
		t.setY(0);
		
		
		zeichnen(max, min, 0, 0);
	}
	
	public void zeichnen(int max, int min, int posX, int posY){
		t.setPos(posX-max/2, posY-max/2);
		t.right(90);
		t.forward(max);
		t.right(90);
		t.forward(max);
		t.right(90);
		t.forward(max);
		t.right(90);
		t.forward(max);
	}

	public static void main(String[] args) {
		Quadrate quadrate = new Quadrate(50, 2);
		
	}

}
